    "prepublishOnly": "npm run test && npm run build"
  },
  "author": "Atle Frenvik Sveen",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "jest": "^24.1.0",
    "rimraf": "^2.6.3"
  }
}
